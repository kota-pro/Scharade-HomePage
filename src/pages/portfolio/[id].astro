---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import {
  getPortfolios,
  getPortfolioDetail,
  type Portfolio,
} from "../../lib/microcms";
import "../../styles/UA+reset.css";

export async function getStaticPaths() {
  const response = await getPortfolios({ fields: ["id"] });
  return response.contents.map((content) => ({
    params: { id: content.id },
  }));
}
const { id } = Astro.params;
const portfolio = await getPortfolioDetail<Portfolio>(id as string);
const genText = portfolio.generation ? `${portfolio.generation}期生` : "";
const dummyBoxes = Array.from({ length: 12 });
const pageTitle = `${portfolio.name} | Portfolio`;
---

<Layout title={pageTitle}>
  <Fragment slot="main-slot">
    <div class="section-title">
      <h1>Portfolio</h1>
      <div class="section-title-line"></div>
    </div>
  </Fragment>

  <Fragment slot="menu-slot">
    <div class="menu-contents-inner">
      <a
        href="javascript:history.back()"
        class="page-top-nav"
        aria-label="Back"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M16 21.308L6.692 12L16 2.692l1.064 1.064L8.819 12l8.244 8.244z"
          ></path>
        </svg>
      </a>
    </div>
  </Fragment>

  <Fragment slot="body-slot">
    <div class="portfolio-detail-wrapper">
      <section class="profile-header">
        <div class="profile-grid">
          <div class="profile-info">
            <h2 class="user-name">{portfolio.name}</h2>
            <div class="tags">
              {
                portfolio.hashtags?.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))
              }
            </div>
            <p class="camera-info">
              {portfolio.camera || "Nikon Z5, Nikomat FT"}
            </p>
            <p class="self-introduction">
              {portfolio.self_introduction || "旅行と散歩が好き"}
            </p>

            <div class="social-links">
              {
                portfolio.x_url && (
                  <a href={portfolio.x_url} target="_blank" class="social-link">
                    X
                  </a>
                )
              }
              {
                portfolio.instagram && (
                  <a
                    href={`https://instagram.com/${portfolio.instagram}`}
                    target="_blank"
                    class="social-link"
                  >
                    Instagram
                  </a>
                )
              }
            </div>
          </div>

          <div class="grade-badge">
            <div class="circle">
              <img
                src={portfolio.icon
                  ? portfolio.icon.url
                  : "/images/placeholder_icon.jpeg"}
                alt={portfolio.name}
                class="profile-icon"
              />

              <span
                class="suffix"
                set:html={genText.replace("期", "<br/>期")}
              />
            </div>
          </div>
        </div>
      </section>
    </div>

    <hr class="section-divider" />

    <div class="gallery-container-inner">
      <div class="placeholder-grid">
        {
          dummyBoxes.map((_, i) => (
            <div class="photo-box">
              {i === 1 && <span class="click-hint">click!!</span>}
              <div class="box-inner">
                <span class="box-label">Photo {i + 1}</span>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </Fragment>
</Layout>

<style>
  .section-title {
    display: flex;
    align-items: center;
    margin-bottom: 55px;
  }
  .section-title h1 {
    font-family: "Didot", serif;
    font-size: 80px;
    letter-spacing: 14.4px;
    padding-right: 50px;
    margin: 0;
  }
  .section-title-line {
    flex-grow: 1;
    height: 1px;
    background: #000;
  }

  .menu-contents-inner {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-end;
  }
  .page-top-nav {
    width: 50px;
    height: 50px;
    background-color: #fff;
    border: 1px solid #000;
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: sticky;
    bottom: 50px;
  }

  .portfolio-detail-wrapper {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .profile-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .user-name {
    font-size: 2.5rem;
    margin-bottom: 10px;
    font-family: "serif";
  }
  .tag {
    margin-right: 15px;
    color: #666;
    font-size: 0.9rem;
  }
  .camera-info,
  .self-introduction {
    margin-bottom: 8px;
    color: #333;
  }
  .social-links {
    display: flex;
    gap: 20px;
    margin-top: 15px;
  }
  .social-link {
    text-decoration: underline;
    font-size: 0.9rem;
    color: #000;
  }

  .grade-badge .circle {
    width: 170px;
    height: 170px;
    background-color: #eee;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: visible;
  }

  .profile-icon {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 1px solid #ddd;
  }
  .grade-badge .number {
    font-size: 5.5rem;
    font-family: monospace;
  }
  .grade-badge .suffix {
    position: absolute;
    right: 10px;
    bottom: 0px;
    line-height: 1.1;
    font-size: 3rem;
    font-family: "Courier New", monospace;
    padding: 2px 5px;
    border-radius: 3px;
  }

  .section-divider {
    border: none;
    border-top: 1px solid #000;
    margin: 40px 0;
  }

  .placeholder-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 20px;
    margin-bottom: 100px;
  }
  .photo-box {
    position: relative;
    aspect-ratio: 3 / 2;
    background-color: #f2f2f2;
    border: 1px solid #e0e0e0;
  }
  .box-inner {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ccc;
  }
  .click-hint {
    position: absolute;
    top: -30px;
    right: -10px;
    font-family: cursive;
    font-size: 1.2rem;
    transform: rotate(15deg);
    color: #666;
  }

  @media (max-width: 768px) {
    .section-title h1 {
      font-size: 40px;
      padding-right: 20px;
    }
    .profile-grid {
      flex-direction: column;
    }
    .grade-badge {
      order: -1;
      margin-bottom: 30px;
    }
    .placeholder-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
