---
export const prerender = false;

import Layout from "../../layouts/Mypost_Layout.astro";
import "../../styles/UA+reset.css";
import { getPortfolioDetail } from "../../lib/microcms";

const { id } = Astro.params;

if (!id) {
  return new Response("Not Found", { status: 404 });
}

let portfolio;
try {
  portfolio = await getPortfolioDetail(id as string);
} catch (e) {
  console.error("Error fetching portfolio:", e);
  return new Response("Not Found", { status: 404 });
}

if (!portfolio) {
  return new Response("Not Found", { status: 404 });
}

const rawGrade = portfolio.grade || "";
const gradeNumber = rawGrade.replace(/[^0-9]/g, ""); 
const gradeText = rawGrade.replace(/[0-9]/g, "").trim(); 

const rawBio = portfolio["self-introduction"] || "";
const formattedBio = rawBio.replace(/\n/g, '<br/>');

const pictures = portfolio.pictures || [];
---

<Layout title={`Portfolio | ${portfolio.name}`} from="Portfolio">
  <div class="profile-section">
    <div class="profile-info">
      <div class="section-head">
        <h2 class="profile-name">{portfolio.name}</h2>
        <div class="social-links">
          {portfolio.instagram && (
            <a href={`https://instagram.com/${portfolio.instagram}`} target="_blank" rel="noopener noreferrer" class="social-icon">
              <img src="/icons/Instagram.svg" alt="Instagram">
            </a>
          )}
        </div>
      </div>

      <div class="profile-meta">
        <p class="tags">#Updated At: {new Date(portfolio.updatedAt).toLocaleDateString()}</p>
        <div>
          <p class="tags">#夜景</p>
          <p class="tags">#Snap Shot</p>
          <p class="tags">#Portrait</p>
        </div>

      </div>

      <div class="profile-bio">
        <p set:html={formattedBio} />
      </div>
    </div>

    <div class="grade-circle-wrapper">
        <div class="grade-circle">
            {portfolio.icon ? (
              <img 
                src={portfolio.icon.url} 
                alt={portfolio.name} 
                class="grade-icon-img"
                width={portfolio.icon.width}
                height={portfolio.icon.height}
              />
            ):(
              <img 
                src="/images/placeholder_icon.jpeg" 
                alt="Placeholder Icon" 
                class="grade-icon-img"
              />
            )}
        </div>
        <div>
          {gradeNumber && <span class="grade-num">{gradeNumber}</span>}
          {gradeText && <span class="grade-txt">{gradeText}</span>}
        </div>
    </div>
  </div>

  <div class="divider-line"></div>

  <div class="photos-section">
    <div class="photos-header">
      <span class="click-hint"><p class="tags">Pictures Count: {pictures.length}</p></span>
      <div class="pagination-simple">◁ 1 / {pictures.length} ▷</div>
    </div>

    <div class="photo-grid">
      {pictures.map((pic) => (
        <div class="photo-item">
            <img 
              src={pic.url} 
              alt="Portfolio Image" 
              width={pic.width} 
              height={pic.height}
              loading="lazy"
            />
        </div>
      ))}
    </div>
  </div>
</Layout>

<style>
  .profile-section {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 60px;
    padding: 0 20px;
  }

  .profile-info {
    width: 62.75%;
  }

  .section-head {
    margin-bottom: 10px;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
  }

  .profile-name {
    color: #000;
    font-family: "Zen Old Mincho";
    font-size: 64px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 9.6px;
  }

  .social-links {
    display: flex;
    gap: 15px;
    align-items: center;
  }
  .social-icon {
    width: 50px;
    height: 50px;
    display: inline-block;
    padding: 10px 10px;
  }

  .social-icon img {
    cursor: pointer;
    filter: invert(59%) sepia(1%) saturate(380%) hue-rotate(24deg) brightness(103%) contrast(99%);
  }


  .social-icon:hover {
    background-color: #e0dede;
  }

  .social-icon:hover img {
    filter: invert(100%) sepia(100%) saturate(0%) hue-rotate(335deg) brightness(106%) contrast(102%);
  }

  .profile-meta {
    display: flex;
    flex-direction: column;
    gap: 5px;
    flex-wrap: wrap;
    margin-bottom: 30px;
  }

  .tags {
    color: #909090;
    font-family: "Zen Kurenaido";
    font-size: 16px;
    font-style: normal;
    font-weight: 200;
    line-height: normal;
    letter-spacing: 3px;
  }

  .profile-meta > div {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 20px;
  }

  .profile-bio {
    white-space: pre-wrap;
    display: flex;
    align-items: center;
  }

  .profile-bio p {
    color: #000;
    font-family: "Zen Kurenaido";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: 1.5;
    letter-spacing: 3px;
  }

  .grade-circle-wrapper {
    width: 300px;
    height: 300px;
    flex-shrink: 0;
    margin-top: 20px;
    z-index: 1 !important;
    position: relative;
  }
  
  .grade-circle {
    width: 100%;
    height: 100%;
    border: 1px solid #ccc;
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    z-index: 1 !important;
  }

  .grade-icon-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .grade-num {
    color: #555;
    font-family: "Grandiflora One";
    font-size: 200px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 30px;
    position: absolute;
    left: -20px;
    top: 30px;
    z-index: 2 !important;
  }
  .grade-txt {
    font-family: "Courier New", monospace;
    font-size: 32px;
    position: absolute;
    right: 20px;
    bottom: 60px;
    color: #333;
    z-index: 2 !important;
  }

  .divider-line {
      width: 100%;
      height: 1px;
      background: #ccc;
      margin-bottom: 40px;
  }

  .photos-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
      font-family: "Courier New", monospace;
      color: #888;
  }
  
  .click-hint {
    color: #909090;
    font-family: "Zen Kurenaido";
    font-size: 18px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
    letter-spacing: 3px;
    display: inline-block;
  }

  .photo-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 15px;
  }

  .photo-item {
    aspect-ratio: 1 / 1;
    background: #eee;
    overflow: hidden;
  }
  
  .photo-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .photo-item:hover img {
    transform: scale(1.05);
  }

  @media (max-width: 768px) {
    .section-title h1 {
      font-size: 50px;
    }
    .profile-section {
      flex-direction: column-reverse;
      gap: 40px;
      align-items: center;
    }
    .profile-info {
      max-width: 100%;
    }
    .grade-circle-wrapper {
      align-self: center;
      margin-bottom: 20px;
      width: 150px;
      height: 150px;
    }
    .grade-num { font-size: 80px; left: -10px; top: 20px; }
    .grade-txt { font-size: 24px; right: 10px; bottom: 40px; }
  }
</style>