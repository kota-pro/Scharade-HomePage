---
export const prerender = false;

import Layout from "../../layouts/Layout.astro";
import { getUserFromRequest } from "../../lib/auth";
import {
  getPortfolios,
  getPortfolioDetail,
  type Portfolio,
} from "../../lib/microcms";
import "../../styles/UA+reset.css";

export async function getStaticPaths() {
  const response = await getPortfolios({ fields: ["id"] });
  return response.contents.map((content) => ({
    params: { id: content.id },
  }));
}

const { id } = Astro.params;
const portfolio = await getPortfolioDetail<Portfolio>(id as string);
const genText = portfolio.generation ? `${portfolio.generation}期生` : "";
const hasPictures = portfolio.pictures && portfolio.pictures.length > 0;
const pageTitle = `${portfolio.name} | Portfolio`;
const { user } = getUserFromRequest(Astro.request);
const canEditLink = Boolean(user && user.approved && user.portfolioId === id);
---

<Layout title={pageTitle}>
  <Fragment slot="main-slot">
    <div class="section-title">
      <h1>Portfolio</h1>
      <div class="section-title-line"></div>
    </div>
  </Fragment>

  <Fragment slot="menu-slot">
    <div class="menu-contents-inner">
      <a
        href="javascript:history.back()"
        class="page-top-nav"
        aria-label="Back"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 24 24"
        >
          <path
            fill="currentColor"
            d="M16 21.308L6.692 12L16 2.692l1.064 1.064L8.819 12l8.244 8.244z"
          ></path>
        </svg>
      </a>
    </div>
  </Fragment>

  <Fragment slot="body-slot">
    <div class="portfolio-detail-wrapper">
      <section class="profile-header">
        <div class="profile-grid">
          <div class="profile-info">
            <h2 class="user-name">{portfolio.name}</h2>
            <div class="tags">
              {
                portfolio.hashtags?.map((tag) => (
                  <span class="tag">#{tag}</span>
                ))
              }
            </div>
            {portfolio.grade && (
              <p class="profile-grade">
                学年: {portfolio.grade}
              </p>
            )}
            <p class="camera-info">
              {portfolio.camera || "Nikon Z5, Nikomat FT"}
            </p>
            <p class="self-introduction">
              {portfolio.self_introduction}
            </p>
            <div class="social-links">
              {
                portfolio.x_url && (
                  <a href={portfolio.x_url} target="_blank" class="social-link">
                    X
                  </a>
                )
              }
              {
                portfolio.instagram && (
                  <a
                    href={`https://instagram.com/${portfolio.instagram}`}
                    target="_blank"
                    class="social-link"
                  >
                    Instagram
                  </a>
                )
              }
            </div>
          </div>
          <div class="grade-badge">
            <div class="circle">
              <img
                src={portfolio.icon
                  ? portfolio.icon.url
                  : "/images/placeholder_icon.jpeg"}
                alt={portfolio.name}
                class="profile-icon"
              />
              <span
                class="suffix"
                set:html={genText.replace("期", "<br/>期")}
              />
            </div>
          </div>
        </div>
      </section>
    </div>

    {canEditLink && (
    <div class="edit-link-wrapper">
        <a class="edit-link" href="/portfolio/edit">Edit my portfolio</a>
    </div>
    )}

    <hr class="section-divider" />

    <div class="gallery-container-inner">
      {
        hasPictures ? (
          <div class="picture-grid">
            {portfolio.pictures.map((pic, i) => (
              <div class="photo-card">
                {i === 0 && <span class="click-hint">New Work!!</span>}
                <div class="photo-wrapper">
                  <img
                    src={`${pic.url}?w=1200&q=75&fm=webp`}
                    alt={`${portfolio.name}の作品 ${i + 1}`}
                    loading="lazy"
                    class="gallery-image"
                  />
                </div>
              </div>
            ))}
          </div>
        ) : (
          <div class="no-photos">まだ写真が投稿されていません。</div>
        )
      }
    </div>

    <div id="image-modal" class="modal-overlay" aria-hidden="true">
      <div class="modal-content">
        <button id="modal-close-btn" class="modal-close" aria-label="Close"
          >&times;</button
        >
        <img id="modal-image" src="" alt="" />
      </div>
    </div>
  </Fragment>
</Layout>

<script>
  const CONTAINER_WIDTH = 1200;
  const TARGET_HEIGHT = 350;
  const MIN_GAP = 30;

  function layoutJustified() {
    const container = document.querySelector(".picture-grid") as HTMLElement;
    if (!container) return;

    container.style.width = `${CONTAINER_WIDTH}px`;
    container.style.margin = "0 auto";
    container.style.display = "block";

    const items = Array.from(
      document.querySelectorAll(".photo-card"),
    ) as HTMLElement[];
    if (items.length === 0) return;

    let currentIndex = 0;
    const rows = [];

    while (currentIndex < items.length) {
      let bestCount = 1;
      let minDiff = Infinity;

      for (let n = 1; currentIndex + n <= items.length; n++) {
        const rowItems = items.slice(currentIndex, currentIndex + n);
        const totalAR = rowItems.reduce((sum, item) => {
          const img = item.querySelector("img")!;
          return sum + img.naturalWidth / img.naturalHeight;
        }, 0);

        const availableWidth = CONTAINER_WIDTH - (n - 1) * MIN_GAP;
        const calculatedHeight = availableWidth / totalAR;
        const diff = Math.abs(TARGET_HEIGHT - calculatedHeight);

        if (diff < minDiff) {
          minDiff = diff;
          bestCount = n;
        } else {
          break;
        }
      }
      rows.push(items.slice(currentIndex, currentIndex + bestCount));
      currentIndex += bestCount;
    }

    if (rows.length > 1) {
      const lastRow = rows[rows.length - 1];
      const prevRow = rows[rows.length - 2];

      const lastRowAR = lastRow.reduce((sum, item) => {
        const img = item.querySelector("img")!;
        return sum + img.naturalWidth / img.naturalHeight;
      }, 0);

      const lastRowHeight =
        (CONTAINER_WIDTH - (lastRow.length - 1) * MIN_GAP) / lastRowAR;

      if (lastRowHeight > TARGET_HEIGHT * 1.5 && prevRow.length > 1) {
        const transferItem = prevRow.pop()!;
        lastRow.unshift(transferItem);
      }
    }

    rows.forEach((row) => {
      const rowTotalAR = row.reduce((sum, item) => {
        const img = item.querySelector("img")!;
        return sum + img.naturalWidth / img.naturalHeight;
      }, 0);

      const rowHeight =
        (CONTAINER_WIDTH - (row.length - 1) * MIN_GAP) / rowTotalAR;

      row.forEach((item, idx) => {
        const img = item.querySelector("img")!;
        const ar = img.naturalWidth / img.naturalHeight;
        item.style.width = `${rowHeight * ar}px`;
        item.style.height = `${rowHeight}px`;
        item.style.display = "inline-block";
        item.style.verticalAlign = "top";
        item.style.marginRight = idx === row.length - 1 ? "0" : `${MIN_GAP}px`;
        item.style.marginBottom = `${MIN_GAP}px`;
        item.style.opacity = "1";
      });
    });
  }

  const modal = document.getElementById("image-modal");
  const modalImg = document.getElementById("modal-image") as HTMLImageElement;
  const closeBtn = document.getElementById("modal-close-btn");

  document.querySelectorAll(".gallery-image").forEach((img) => {
    img.addEventListener("click", () => {
      if (!modal || !modalImg) return;
      const src = img.getAttribute("src")?.split("?")[0];
      if (src) {
        modalImg.src = src;
        modal.classList.add("active");
        document.body.style.overflow = "hidden";
      }
    });
  });

  closeBtn?.addEventListener("click", () => {
    modal?.classList.remove("active");
    document.body.style.overflow = "";
  });

  window.addEventListener("load", layoutJustified);
  window.addEventListener("resize", layoutJustified);
</script>

<style>
  .section-title {
    display: flex;
    align-items: center;
    margin-bottom: 55px;
  }
  .section-title h1 {
    font-family: "Didot", serif;
    font-size: 80px;
    letter-spacing: 14.4px;
    padding-right: 50px;
    margin: 0;
  }
  .section-title-line {
    flex-grow: 1;
    height: 1px;
    background: #000;
  }

  .portfolio-detail-wrapper {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  .profile-grid {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
  }
  .user-name {
    font-size: 2.5rem;
    margin-bottom: 10px;
    font-family: "serif";
  }
  .tag {
    margin-right: 15px;
    color: #666;
    font-size: 0.9rem;
  }
  .social-link {
    text-decoration: underline;
    font-size: 0.9rem;
    color: #000;
    margin-right: 15px;
  }

  .grade-badge .circle {
    width: 170px;
    height: 170px;
    background-color: #eee;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .self-introduction {
  white-space: pre-line;
  }
  .profile-icon {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    border: 1px solid #ddd;
  }
  .grade-badge .suffix {
    position: absolute;
    right: 10px;
    bottom: 0px;
    line-height: 1.1;
    font-size: 3rem;
    font-family: "Courier New", monospace;
    padding: 4px 8px;
    border-radius: 3px;
    text-align: center;
  }

  .section-divider {
    border: none;
    border-top: 1px solid #000;
    margin: 40px 0;
  }

  .gallery-container-inner {
    width: 1200px;
    margin: 0 auto;
  }
  .picture-grid {
    width: 1200px;
    font-size: 0;
  }
  .photo-card {
    opacity: 0;
    transition: opacity 0.5s ease;
    cursor: pointer;
    overflow: hidden;
  }
  .photo-wrapper {
    width: 100%;
    height: 100%;
  }
  .photo-wrapper img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .click-hint {
    position: absolute;
    top: -30px;
    right: -10px;
    font-family: cursive;
    font-size: 1.2rem;
    transform: rotate(15deg);
    color: #666;
    z-index: 5;
  }

  .modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.9);
    z-index: 1000;
    display: flex;
    justify-content: center;
    align-items: center;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s;
  }
  .modal-overlay.active {
    opacity: 1;
    visibility: visible;
  }
  .modal-close {
    position: fixed;
    top: 20px;
    right: 20px;
    color: white;
    font-size: 50px;
    background: none;
    border: none;
    cursor: pointer;
  }
  #modal-image {
    max-width: 90vw;
    max-height: 90vh;
    object-fit: contain;
  }

  @media (max-width: 1200px) {
    .gallery-container-inner,
    .picture-grid {
      width: 100%;
      padding: 0 20px;
    }
  }
  @media (max-width: 768px) {
    .section-title h1 {
      font-size: 40px;
    }
    .profile-grid {
      flex-direction: column;
    }
    .grade-badge {
      order: -1;
      margin-bottom: 30px;
    }
  }
</style>
